<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interfaz para Estudiantes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <a href="/" class="navbar-brand">tRABAJO ESTUDIANTES</a> </nav>

        <div class="container">
            <div class="row">
                <!-- FORMULARIO -->
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-boy">
                            <form action="/add" method="POST">
                                <div class="form-group">
                                    <input type="text" name="nombres" placeholder="Nombre" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="edad" placeholder="Edad" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="correo" placeholder="E - mail" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="direccion" placeholder="Direccion" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="telefono" placeholder="Celular" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"> Agregar </button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- LISTA -->
                <div class="col-md-7">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>NÂ°</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Edad</th>
                                <th>Email</th>
                                <th>Direccion</th>
                                <th>Celular</th>
                                <th>Operacion</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% for(var i = 0; i < tasks.length; i++ ) { %>
                          <tr>
                            <td><%= i + 1 %></td>
                            <td><%= tasks[i].nombres %></td>
                            <td><%= tasks[i].apellidos %></td>
                            <td><%= tasks[i].edad %></td>
                            <td><%= tasks[i].correo %></td>
                            <td><%= tasks[i].direccion %></td>
                            <td><%= tasks[i].telefono %></td>
                            <td>
                              <a href="/turn/<%= tasks[i]._id %>" class="btn btn-dark">Cursando</a>
                              <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                              <a href="edit/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                            </td>
                          </tr>
                          <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
    </html>
